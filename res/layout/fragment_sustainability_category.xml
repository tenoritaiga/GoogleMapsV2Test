<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:id="@+id/view_sust_data"
		    tools:context=".MainActivity$SustainabilityFragment" >
	    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dip"
		        android:text="@string/sust_gas"
		        android:textSize="15sp"
		        android:textStyle="bold" />
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_marginTop="10dip"
		        android:background="#FFFFFF" />
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	tools:context=".MainActivity$SustainabilityFragment" >
		 
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/average_monthly"
		            android:textSize="15sp" />
		        
		        <EditText android:id="@+id/sust_cons_avg"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:text="@string/avg_mon" 
		        	android:inputType="text" />        
		        
		    </LinearLayout>
		    
	        <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	tools:context=".MainActivity$SustainabilityFragment" >
		 
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/average_monthly_all"
		            android:textSize="15sp" />
		        
		        <EditText android:id="@+id/sust_cons_avg_all"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:text="@string/avg_mon_all" 
		        	android:inputType="text" />        
		        
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dip"
		        android:text="@string/sust_energy"
		        android:textSize="15sp"
		        android:textStyle="bold" />
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_marginTop="10dip"
		        android:background="#FFFFFF" />
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	tools:context=".MainActivity$SustainabilityFragment" >
		 
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/avg_gas_monthly"
		            android:textSize="15sp" />
		        
		        <EditText android:id="@+id/sust_gas_cons_avg"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:text="@string/avg_mon" 
		        	android:inputType="text" />        
		        
		    </LinearLayout>
		    
	        <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	tools:context=".MainActivity$SustainabilityFragment" >
		 
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/avg_gas_monthly_all"
		            android:textSize="15sp" />
		        
		        <EditText android:id="@+id/sust_gas_cons_avg_all"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:text="@string/avg_mon_all" 
		        	android:inputType="text" />        
		        
		    </LinearLayout>
		    
	        <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	tools:context=".MainActivity$SustainabilityFragment" >
		 
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/avg_elect_monthly"
		            android:textSize="15sp" />
		        
		        <EditText android:id="@+id/sust_elect_cons_avg"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:text="@string/avg_mon" 
		        	android:inputType="text" />        
		        
		    </LinearLayout>
		    
	        <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	tools:context=".MainActivity$SustainabilityFragment" >
		 
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/avg_elect_monthly_all"
		            android:textSize="15sp" />
		        
		        <EditText android:id="@+id/sust_elect_cons_avg_all"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:text="@string/avg_mon_all" 
		        	android:inputType="text" />        
		        
		    </LinearLayout>
		    		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dip"
		        android:text="@string/sust_water"
		        android:textSize="15sp"
		        android:textStyle="bold" />
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_marginTop="10dip"
		        android:background="#FFFFFF" />
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	tools:context=".MainActivity$SustainabilityFragment" >
		 
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/average_monthly"
		            android:textSize="15sp" />
		        
		        <EditText android:id="@+id/sust_water_cons_avg"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:text="@string/avg_mon" 
		        	android:inputType="text" />        
		        
		    </LinearLayout>
		    
	        <LinearLayout 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	tools:context=".MainActivity$SustainabilityFragment" >
		 
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/average_monthly_all"
		            android:textSize="15sp" />
		        
		        <EditText android:id="@+id/sust_water_cons_avg_all"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:text="@string/avg_mon_all" 
		        	android:inputType="text" />        
		        
		    </LinearLayout>
	    
	    </LinearLayout>
	    
	    <Button
	        android:id="@+id/gasButton"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:drawableLeft="@drawable/gas"
	        android:onClick="startMyGasActivity"
	        android:text="@string/myGasButtonText" />
	
	    <Button
	        android:id="@+id/energyButton"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:drawableLeft="@drawable/gas"
	        android:onClick="startMyEnergyActivity"
	        android:text="@string/myEnergyButtonText" />
	    
	    <Button
	        android:id="@+id/waterButton"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:drawableLeft="@drawable/gas"
	        android:onClick="startMyWaterActivity"
	        android:text="@string/myWaterButtonText" />
	
	    <Button
	        android:id="@+id/energyCalcButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="startEnergyCalculatorActivity"
	        android:text="@string/energyCalcButtonText" />
	
	</LinearLayout>
</ScrollView>
