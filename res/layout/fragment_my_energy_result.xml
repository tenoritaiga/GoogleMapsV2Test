<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:id="@+id/view_water_results"
		tools:context=".MyEnergyActivity$DummySectionFragment" >
		
        <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="5dip"
	    	android:orientation="horizontal"
	    	tools:context=".MyEnergyActivity$DummySectionFragment" >
	 
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="10dip"
	            android:text="@string/total_gas_usage"
	            android:textSize="15sp" />
	        
	        <TextView android:id="@+id/gas_cons_total"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:text="@string/total_cons" />        
	        
	    </LinearLayout>
	    
        <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="5dip"
	    	android:orientation="horizontal"
	    	tools:context=".MyEnergyActivity$DummySectionFragment" >
	 
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="10dip"
	            android:text="@string/avg_gas_monthly"
	            android:textSize="15sp" />
	        
	        <TextView android:id="@+id/gas_cons_avg"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:text="@string/avg_mon" />        
	        
	    </LinearLayout>
	    
        <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="5dip"
	    	android:orientation="horizontal"
	    	tools:context=".MyEnergyActivity$DummySectionFragment" >
	 
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="10dip"
	            android:text="@string/avg_gas_monthly_all"
	            android:textSize="15sp" />
	        
	        <TextView android:id="@+id/gas_cons_avg_all"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:text="@string/avg_mon_all" />        
	        
	    </LinearLayout>
	    
        <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="5dip"
	    	android:orientation="horizontal"
	    	tools:context=".MyEnergyActivity$DummySectionFragment" >
	 
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="10dip"
	            android:text="@string/total_electricity_usage"
	            android:textSize="15sp" />
	        
	        <TextView android:id="@+id/elect_cons_total"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:text="@string/total_cons" />        
	        
	    </LinearLayout>
	    
        <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="5dip"
	    	android:orientation="horizontal"
	    	tools:context=".MyEnergyActivity$DummySectionFragment" >
	 
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="10dip"
	            android:text="@string/avg_elect_monthly"
	            android:textSize="15sp" />
	        
	        <TextView android:id="@+id/elect_cons_avg"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:text="@string/avg_mon" />        
	        
	    </LinearLayout>
	    
        <LinearLayout 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="5dip"
	    	android:orientation="horizontal"
	    	tools:context=".MyEnergyActivity$DummySectionFragment" >
	 
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="10dip"
	            android:text="@string/avg_elect_monthly_all"
	            android:textSize="15sp" />
	        
	        <TextView android:id="@+id/elect_cons_avg_all"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:text="@string/avg_mon_all" />        
	        
	    </LinearLayout>
	    
        <LinearLayout   
            android:orientation="vertical"   
            android:layout_width="fill_parent"   
            android:layout_height="250dip"   
            android:id="@+id/graph_energy" />
        
        <TableLayout 
            android:id="@+id/energyResultsTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
            <TableRow 
                android:id="@+id/headerRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" >
                
                <TextView 
                    android:id="@+id/energy_date"
                    android:text="@string/show_date"
                    android:paddingLeft="5dip"
                    android:paddingRight="10dip" />
                
                <TextView 
                    android:id="@+id/gas_num"
                    android:text="@string/show_gas"
                    android:paddingLeft="5dip"
                    android:paddingRight="10dip" />
                
                <TextView
                    android:id="@+id/elect_num"
                    android:text="@string/show_elect"
                    android:paddingLeft="5dip"
                    android:paddingRight="10dip" />
                         
            </TableRow>
            
        </TableLayout>
        
    </LinearLayout>
    

</ScrollView>
