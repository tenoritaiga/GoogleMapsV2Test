<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".EmergencyOffer" >

    <RelativeLayout 
	    android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:orientation="horizontal"
	   	tools:context=".EmergencyReport" >
	   	
        <TextView
	        android:id="@+id/txt_offer_shower"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="14dp"
	        android:textStyle="bold"
	        android:text="@string/txt_offer_shower"
	        android:textSize="14sp"/>
    
	    <RadioGroup
	        android:id="@+id/rad_offer_group"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/edit_shower_offer"
	        android:orientation="horizontal" >
	
	        <RadioButton
	            android:id="@+id/rad_offer_yes"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/radio_yes" />
	
	        <RadioButton
	            android:id="@+id/rad_offer_no"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:checked="true"
	            android:text="@string/radio_no" />
	    </RadioGroup>
	    
	    <EditText
	        android:id="@+id/edit_shower_offer"
	        android:layout_width="35dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="10dp"
	        android:ems="10"
	        android:inputType="number"
	        android:maxLength="1"
	        android:text="@string/def_offer" />
    </RelativeLayout>
    
